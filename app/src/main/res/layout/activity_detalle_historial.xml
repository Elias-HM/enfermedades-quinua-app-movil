<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleHistorialActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgDetalle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="@string/detHistorial_img" />

        <TextView
            android:id="@+id/txtDetalleFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detHistorial_lbl_fecha" />

        <TextView
            android:id="@+id/txtDetallePrediccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detHistorial_lbl_prediccion" />

        <TextView
            android:id="@+id/txtDetallePrecision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detHistorial_lbl_precision" />

        <Button
            android:id="@+id/btnDetalleEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detHistorial_btn_eliminar"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>